#!/usr/bin/env groovy

pipeline {
    agent any
    tools {
        // Define the Maven tool installation
        maven 'maven-3.9'
    }
    environment {
        // Initialize the IMAGE_NAME variable
        IMAGE_NAME = ""
    }
    stages {
        stage("Increment version") {
            steps {
                script {
                    echo "Incrementing app version"
                    // Use the correct variable name: newIncrementalVersion
                    sh "mvn build-helper:parse-version versions:set \
                        -DnewVersion=\${parsedVersion.majorVersion}.\${parsedVersion.minorVersion}.\${parsedVersion.newIncrementalVersion} \
                        versions:commit"
                    def matcher = readFile("pom.xml") =~ "<version>(.+)</version>"
                    def version = matcher[0][1]
                    env.IMAGE_NAME = version
                }
            }
        }
        stage("Build JAR") {
            steps {
                script {
                    echo "Building the application JAR"
                    sh 'mvn clean package'
                }
            }
        }
        
        stage("Build Docker Image") { 
            steps {
                script {
                    echo "Building the Docker image"
                    withCredentials([usernamePassword(credentialsId: "dockerhub-credentials", passwordVariable: "PASSWORD", usernameVariable: "USERNAME")]) {
                        sh "docker build -t amosa77/demo-app:${env.IMAGE_NAME} ."
                        sh "echo \$PASSWORD | docker login -u \$USERNAME --password-stdin"
                        sh "docker push amosa77/demo-app:${env.IMAGE_NAME}"
                    }
                }
            }
        }
        
        stage("Deploy to EC2") {
            steps {
                script {
                    echo "Deploying the application to EC2..."
                    // Add your deployment steps here
                }
            }
        }
    }
}
